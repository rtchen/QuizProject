@CHARSET "UTF-8";

body, p, a, h2, h3, h4, tr, th, td {
	font-family: Helvetica Narrow, sans-serif;
}

.logo{
	font-size:60px;
	font-family: Helvetica Narrow, sans-serif;
	color: #3191f6;
	font-weight: 600;
	text-shadow: text-shadow: 2px 2px 2px #FF0000;
	font-variant: small-caps;
	position: relative;
	left: 30px;
	display: inline;
	text-decoration: none;
}


.logo-word {
	display: inline;
	position: relative;
	left: 80px;
	top: -10px;
	font-family: cursive;
	font-style: italic;
	font-size: 20px;
	font-weight: 500;
	color: #8d9baa;
	
}

#homepage #band {
	background: url("homepage-band.jpg") no-repeat center center;
	background-size: cover;
	height: 450px;
}

.button {
	padding: 0 50px;
	font-size: 25px;
	height: 50px;
	display: block;
	position: relative;
	z-index: 1;
	font-family: "museo-sans",sans-serif;
	color: #333333;
	font-weight: 900;
	background-color: #f2cb00;
	border-radius: 0;
	line-height: 28px;
	-webkit-appearance: none;
}

.small-button {
	padding: 0 3px;
	font-size: 15px;
	height: 30px;
	display: block;
	position: relative;
	z-index: 1;
	font-family: "museo-sans",sans-serif;
	color: #333333;
	font-weight: 900;
	background-color: #f2cb00;
	border-radius: 0;
	line-height: 28px;
	-webkit-appearance: none;
}

#band #text {
	position: relative;
	left: 100px;
	top: 50px;
	font-size: 25px;
	width: 450px;
	color: #070b4a;
}

#band .button {
	position: relative;
	left: 100px;
	top: 50px;
}

